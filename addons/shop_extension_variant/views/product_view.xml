<odoo>
    <record id="view_product_product_form_shop_visibility" model="ir.ui.view">
        <field name="name">product.product.form.shop.visibility</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="shop_visibility"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_product_form_shop_visibility_easy" model="ir.ui.view">
        <field name="name">product.product.form.shop.visibility_easy</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="shop_visibility"/>
            </xpath>
        </field>
    </record>
</odoo>