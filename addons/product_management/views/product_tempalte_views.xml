<odoo>
    <record id="view_product_template_form_shop_visibility" model="ir.ui.view">
        <field name="name">product.template.form.shop.visibility</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <group string="Shop Settings">
                    <field name="shop_visibility"/>
                    <field name="shop_type"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>