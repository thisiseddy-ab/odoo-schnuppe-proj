
<odoo>
    <template id="website_sale_product_inherit_filter_attributes" inherit_id="website_sale.product">
        <xpath expr="//div[contains(@class, 'attribute_value_list')]" position="replace">
            <div class="attribute_value_list">
                <t t-set="variant_ids" t-value="filtered_variant_ids or product.product_variant_ids"/>
                <t t-set="allowed_value_ids" t-value="allowed_attribute_value_ids or []"/>

                <t t-foreach="product.attribute_line_ids" t-as="attribute_line">
                    <div>
                        <span t-esc="attribute_line.attribute_id.name"/>
                        <t t-foreach="attribute_line.value_ids" t-as="value">
                            <t t-if="not allowed_value_ids or value.id in allowed_value_ids">
                                <button t-att-data-value="value.id">
                                    <span t-esc="value.name"/>
                                </button>
                            </t>
                        </t>
                    </div>
                </t>
            </div>
        </xpath>
    </template>
</odoo>